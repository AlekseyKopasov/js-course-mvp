{
  "name": "lectures-viewer",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://alekseykopasov.github.io/js-course-mvp",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\" --config ./.stylelintrc.json",
    "lint:scripts": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --config eslint.config.mjs",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "types": "tsc --noEmit --project tsconfig.json",
    "lint:fix": "stylelint \"src/**/*.{css,scss}\" --config ./.stylelintrc.json --fix && eslint --cache --cache-location ./node_modules/.cache/.eslintcache --config eslint.config.mjs --fix",
    "editorconfig": "editorconfig-cli -x \"vendor/\" -x \"package-lock.json\"",
    "format": "prettier --write ./**/**.{js,ts,jsx,tsx}",
    "test": "npm run editorconfig && npm run lint && npm run types",
    "prepare": "husky",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix"
    ]
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "src/**/*.html",
    "src/**/*.pug",
    "src/js/**/*.js",
    "src/js/**/*.ts",
    "src/img/**/*.svg",
    "src/scss/**/*.{sass,scss}",
    "!package-lock.json"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.1",
    "react-syntax-highlighter": "^15.6.1",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@htmlacademy/editorconfig-cli": "^3.0.0",
    "@prettier/plugin-pug": "^3.2.0",
    "@stylistic/stylelint-plugin": "^2.1.3",
    "@types/node": "^22.13.1",
    "@types/pug": "^2.0.10",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "cssnano": "^6.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "gh-pages": "^6.3.0",
    "glob-exec": "^0.1.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.1.0",
    "postcss-nesting": "^12.1.5",
    "prettier": "^3.4.2",
    "pug": "^3.0.3",
    "sass": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.0",
    "svgo": "^3.3.2",
    "terser": "^5.37.0",
    "typescript": "5.1.6",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.1.0",
    "vite-plugin-string": "^1.2.3"
  },
  "browserslist": [
    "last 3 versions",
    "not ie <= 11",
    "Firefox ESR"
  ]
}
